<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.islamicfragment">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.IslamicFragment">
        <activity android:name=".ui.activity.StartSuraDetalisActivity" android:theme="@style/Theme.IslamicFragment.noActionBar"></activity>
        <activity
            android:name=".ui.activity.HomeActivity"
            android:theme="@style/Theme.IslamicFragment.noActionBar" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/Theme.IslamicFragment.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>